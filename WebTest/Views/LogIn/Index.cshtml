    data: [],//本地数据  不支持本地数据的分页
    queryParam: {'name':"ok",'dept':"okdept"},//查询参数
    page:true,//是否分页
    pageSize:5,//每页数量
    select:true,//是否生成checkbox

    columns: [ {//列数组
            text:'用户名',//显示的表头
            name: 'name',//显示的数据key
            width: 100,//宽度
