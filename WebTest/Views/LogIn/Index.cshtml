<script>
    var form = layui.form();
    var $ = layui.jquery;
    var layer = layui.layer;

    $("#qal_medict_temp").queryautolist('init'
        @*, {
        valueFildName: "name", textFieldName: "dept",
        queryFields: "name,dept",callbacktype='ajax',
        ajaxUrl:"@Url.Action("loginUser")"
        }*@
    );
    //监听提交
    form.on('submit(formsubmit)', function (data) {
        comconfim('确定要提交吗？','@Url.Action("login")', null);
        return false;
    });

  var config = {
