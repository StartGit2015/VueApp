
<div>
   
    <form id="login" class="layui-form" hidden action="/home/Home" method="post">
        <div class="layui-inline">
            <div class="layui-input-inline" style="width:70%;padding:0px 0px 0px 0px">
                <input class="layui-input" lay-verify="required" autocomplete="off" name="enterCode" type="text" placeholder="请输入登录口令">
            </div>
            <div class="layui-input-inline" style="width:28%;padding-top:0px">
                <button class="layui-btn layui-btn-radius layui-btn-warm" lay-submit lay-filter="entersubmit">确定</button>
            </div> 
            <input id="device" type="hidden" name="deviceInfor" value=""/>
        </div>
    </form>
</div>

<script>
    layui.use(['layedit', 'layer', 'form'], function () {
        var layedit = layui.layedit, layer = layui.layer, form = layui.form(),
            $ = layui.jquery;
        var device = JSON.stringify(layui.device());
        $("#device").val(device);
        layer.open({
            type: 1,
            title: false,
            skin: 'layui-layer-lan', //样式类名
            closeBtn: 0, //不显示关闭按钮
            anim: 2,
            area: ['auto', 'auto'],
            shadeClose: false, //开启遮罩关闭,
            shade: 0.8,
            content: $("#login")
        });

        form.on('submit(entersubmit)', function (data) {
            var index = layer.open({
                type: 3,
                icon: 0,
                time: 5000,
            }
            );
            
            $.post("/home", data.field, function (ref) {

            });
        })
    })


</script>
